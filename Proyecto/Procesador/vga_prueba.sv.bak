module vga_prueba(
    input logic clk,
    input logic [7:0] pixel,
    output logic vgaclk,
    output logic hsync, vsync,
    output logic sync_b, blank_b,
    output logic [7:0] r, g, b,
    output logic [9:0] x, y
);

    // Instanciación del PLL para generar el reloj VGA
    pll vgapll(.inclk0(clk), .c0(vgaclk));

    // Instanciación del módulo image_loader
    logic [7:0] pixel_data;
    logic [9:0] img_x, img_y;

    image_loader img_loader (
        .x(img_x),
        .y(img_y),
        .pixel_data(pixel_data)
    );

    // Instanciación del módulo VGA
    vga vga_inst (
        .clk(clk),
        .pixel(pixel_data), // Usar el pixel cargado desde image_loader
        .vgaclk(vgaclk),
        .hsync(hsync),
        .vsync(vsync),
        .sync_b(sync_b),
        .blank_b(blank_b),
        .r(r),
        .g(g),
        .b(b),
        .x(x),
        .y(y)
    );

endmodule 